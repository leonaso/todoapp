<!DOCTYPE html>
<html>
<head>
	<title>Edit a todo</title>
</head>
<body>
	<h1>Editing a todo</h1>

	<% if @todo.errors.any? %>
	<h2> This error prevented saving the todo </h2>
	<ul>
		<% @todo.errors.full_messages.each do  |msg| %>
			<li> <%= msg %> </li> 	
		<% end %>
	</ul>
<% end %>

<%= form_for @todo do |f| %>

<p>
	<%= f.label :name %> <br>
	<%= f.text_field :name %>
</p>


<p>
	<%= f.label :description %> <br>
	<%= f.text_area :description %>
</p>

<p>
	<%= f.submit %>
</p>

<% end %>

</body>
</html>